<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPdfFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="5.00dp"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginRight="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_large"
        android:layout_marginBottom="@dimen/spacing_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/pdfNoteImg"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/pdf"
                android:scaleType="fitXY"
                android:layout_marginLeft="@dimen/spacing_large"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_large"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
            
            <TextView
                android:id="@+id/pdf_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PDF name goes here"
                app:layout_constraintStart_toEndOf="@+id/pdfNoteImg"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textSize="@dimen/heading3"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/spacing_large"
                />

            <ImageView
                android:id="@+id/downlaodIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_file_download_black_24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="@dimen/spacing_large"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginRight="@dimen/spacing_large"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>