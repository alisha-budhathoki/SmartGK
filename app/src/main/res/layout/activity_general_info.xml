<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Actvities.GeneralInfo">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:minHeight="?attr/actionBarSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <ImageView
            android:id="@+id/threeLines"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/menu"
            android:layout_marginLeft="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/lft_arrow"
            android:layout_marginRight="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_mlarge"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="350dp"
            />
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/nepalBankTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/heading1"
        android:text="Nepal Ratsra Bank-Level4"
        android:textColor="@color/mintGreen"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarM"
        />
    <TextView
        android:id="@+id/courseDetalTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/heading2"
        android:text="Course Detail"
        android:textColor="@color/mintGreen"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nepalBankTxt"
        />
    <View
        android:id="@+id/view"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/courseDetalTxt"
        />

    <TextView
        android:id="@+id/gnrlInfoTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/heading1"
        android:text="General Information"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        />

    <TextView
        android:id="@+id/gnrlInfoDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/heading3"
        android:text="Paragraphs are the building blocks of papers. Many students define paragraphs in terms of length: a paragraph is a group of at least five sentences, a paragraph is half a page long, etc. In reality, though, the unity and coherence of ideas among sentences is what constitutes a paragraph. "
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gnrlInfoTxt"
        />

    <TextView
        android:id="@+id/whtUGtinCourse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/heading1"
        android:textStyle="bold"
        android:text="What you get in the course?"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gnrlInfoDesc"
        />

    <TextView
        android:id="@+id/videos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/heading2"
        android:text="Videos"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_check_black_24dp"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_xsmall"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/whtUGtinCourse"
        />

    <TextView
        android:id="@+id/notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/heading1"
        android:text="Notes"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_check_black_24dp"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_xsmall"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/videos"
        />

    <TextView
        android:id="@+id/liveClass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/heading1"
        android:text="Live Classes"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_check_black_24dp"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_xsmall"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notes"
        />

    <TextView
        android:id="@+id/exams"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/heading1"
        android:text="Exams"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_check_black_24dp"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_xsmall"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/liveClass"
        />

    <TextView
        android:id="@+id/notices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/heading1"
        android:text="Notices"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_check_black_24dp"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_xsmall"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exams"
        />

    <TextView
        android:id="@+id/pricingDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/heading1"
        android:text="Pricing Detail"
        android:textColor="@color/mintGreen"
        android:textStyle="bold"
        android:layout_marginLeft="@dimen/spacing_large"
        android:layout_marginTop="@dimen/spacing_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notices"
        />
    <View
        android:id="@+id/view2"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pricingDetail"
        />

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="1dp"
        android:stretchColumns="0"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/tlTable01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pricingDetail">

        <TableRow
            android:background="@color/white"
            android:paddingBottom="1dp"
            android:paddingRight="1dp">

            <TextView
                android:layout_marginLeft="1dp"
                android:padding="5dp"
                android:background="@color/mintGreen"
                android:gravity="left"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="DESCRIPTION"/>
            <TextView
                android:layout_marginLeft="1dp"
                android:padding="5dp"
                android:background="@color/mintGreen"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="right"
                android:text="PRICE"/>
        </TableRow>
        <TableRow
            android:background="@color/white"
            android:paddingBottom="1dp"
            android:paddingRight="1dp">
            <TextView
                android:layout_marginLeft="1dp"
                android:padding="5dp"
                android:background="@color/mintGreen"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Videos"/>

            <TextView
                android:layout_marginLeft="1dp"
                android:padding="5dp"
                android:background="@color/mintGreen"
                android:gravity="left"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Rs. 500"/>
        </TableRow>
        <TableRow
            android:background="@color/white"
            android:paddingBottom="1dp"
            android:paddingRight="1dp">
            <TextView
                android:layout_marginLeft="1dp"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@color/mintGreen"
                android:text="Notes"/>
            <TextView
                android:layout_marginLeft="1dp"
                android:padding="5dp"
                android:background="@color/mintGreen"
                android:gravity="left"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Rs. 500"/>

        </TableRow>
        <TableRow
        android:background="@color/white"
        android:paddingBottom="1dp"
        android:paddingRight="1dp">
        <TextView
            android:layout_marginLeft="1dp"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@color/mintGreen"
            android:text="Live Classes"/>
        <TextView
            android:layout_marginLeft="1dp"
            android:padding="5dp"
            android:background="@color/mintGreen"
            android:gravity="left"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Rs. 500"/>
    </TableRow>
        <TableRow
            android:background="@color/white"
            android:paddingBottom="1dp"
            android:paddingRight="1dp">
            <TextView
                android:layout_marginLeft="1dp"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@color/mintGreen"
                android:text="Exams"/>
            <TextView
                android:layout_marginLeft="1dp"
                android:padding="5dp"
                android:background="@color/mintGreen"
                android:gravity="left"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Rs. 500"/>
        </TableRow>
        <TableRow
            android:background="@color/white"
            android:paddingBottom="1dp"
            android:paddingRight="1dp">
            <TextView
                android:layout_marginLeft="1dp"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@color/mintGreen"
                android:text="Notices"/>
            <TextView
                android:layout_marginLeft="1dp"
                android:padding="5dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:background="@color/mintGreen"
                android:gravity="left"
                android:text="Rs. 500"/>
        </TableRow>
    </TableLayout>



</androidx.constraintlayout.widget.ConstraintLayout>