<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >


    <androidx.cardview.widget.CardView
        android:id="@+id/cardA3_bbokfr"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        app:cardElevation="5.00dp"
        android:layout_marginBottom="@dimen/spacing_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/book_img_bbokfr"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="fitXY"
                android:src="@drawable/pic_alchemist"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <TextView
                android:id="@+id/title_name_bbokfr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Book Name Goes Here"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/spacing_medium"
                android:layout_marginRight="@dimen/spacing_xmedium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/book_img_bbokfr"
                app:layout_constraintEnd_toEndOf="parent"

                />

            <TextView
                android:id="@+id/rsBuyBook2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs. "
                android:layout_marginLeft="@dimen/spacing_xmedium"
                android:textColor="@color/colorPrimary"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title_name_bbokfr"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/spacing_medium"
                />

            <TextView
                android:id="@+id/book_price_bbokfr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500/-"
                android:textColor="@color/colorPrimary"
                app:layout_constraintStart_toEndOf="@+id/rsBuyBook2"
                app:layout_constraintTop_toBottomOf="@+id/title_name_bbokfr"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/spacing_medium"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

